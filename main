# Selection interface
class Main
  # Selection
  def options
    puts 'Please choose an option:'
    puts '1 - List all books'
    puts '2 - List all music albums'
    puts '3 - List of games'
    puts '4 - List all genres'
    puts '5 - List all labels'
    puts '6 - List all authors'
    puts '7 - Add a book'
    puts '8 - Add a music album'
    puts '9 - Add a game'
    puts '0 - Exit'
    user_selection
  end
end

def user_selection
  selection = gets.chomp
  case selection
  when '1'
    options
  when '2'
    options
  when '3'
    options
  when '4'
    options
  when '5'
    options
  when '6'
    options
  when '7'
    options
  when '8'
    options
  when '9'
    options
  when '0'
    abort
  else
    puts 'Invalid selection'
  end
end

main = Main.new
main.options
